<h1>Cocktails Gallery</h1>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="card m-3 p-3">
        <h4><%= cocktail.name %></h4>
        <ul>
          <% cocktail.doses.each do |dose| %>
            <li>
              <p>
                <%= dose.ingredient.name %> <%= dose.description %>cl
              </p>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
